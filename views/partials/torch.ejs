<style>

    .torch-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .torch {
        position: absolute;
        top: 1rem;
        left: 1rem;
        pointer-events: none;
        opacity: 0.8;
        width: 2rem;
    }
</style>



<div class="torch-container">
    <img src="./img/torch.gif" class="torch" />
</div>


<script>
    const torch = document.querySelector('.torch');

    document.addEventListener('mousemove', (e) => {
        const x = e.clientX;
        const y = e.clientY;

        torch.style.transform = `translate3d(${x}px, ${y}px, 0)`;
    });
</script>

